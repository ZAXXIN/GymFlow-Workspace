<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gymflow.mapper.MemberMapper">

    <resultMap id="MemberVOMap" type="com.gymflow.vo.MemberVO">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="memberNo" column="member_no"/>
        <result property="realName" column="real_name"/>
        <result property="gender" column="gender"/>
        <result property="birthday" column="birthday"/>
        <result property="height" column="height"/>
        <result property="weight" column="weight"/>
        <result property="membershipType" column="membership_type"/>
        <result property="membershipStartDate" column="membership_start_date"/>
        <result property="membershipEndDate" column="membership_end_date"/>
        <result property="personalCoachId" column="personal_coach_id"/>
        <result property="totalCheckins" column="total_checkins"/>
        <result property="totalCourseHours" column="total_course_hours"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="username" column="username"/>
        <result property="phone" column="phone"/>
        <result property="email" column="email"/>
        <result property="avatar" column="avatar"/>
        <result property="coachName" column="coach_name"/>
    </resultMap>

    <select id="selectMemberPage" resultMap="MemberVOMap">
        SELECT
        m.*,
        u.username,
        u.phone,
        u.email,
        u.avatar,
        c.real_name as coach_name
        FROM member m
        LEFT JOIN user u ON m.user_id = u.id
        LEFT JOIN coach c ON m.personal_coach_id = c.id
        WHERE u.deleted = 0
        <if test="keyword != null and keyword != ''">
            AND (
            m.real_name LIKE CONCAT('%', #{keyword}, '%')
            OR u.username LIKE CONCAT('%', #{keyword}, '%')
            OR u.phone LIKE CONCAT('%', #{keyword}, '%')
            OR m.member_no LIKE CONCAT('%', #{keyword}, '%')
            )
        </if>
        ORDER BY m.create_time DESC
    </select>

    <select id="selectMemberDetail" resultMap="MemberVOMap">
        SELECT
            m.*,
            u.username,
            u.phone,
            u.email,
            u.avatar,
            c.real_name as coach_name
        FROM member m
                 LEFT JOIN user u ON m.user_id = u.id
                 LEFT JOIN coach c ON m.personal_coach_id = c.id
        WHERE m.id = #{memberId} AND u.deleted = 0
    </select>

</mapper>